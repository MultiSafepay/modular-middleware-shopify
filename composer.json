{
    "name": "modular-shopify/modular-middleware-shopify",
    "description": "A package for modular middleware",
    "keywords": [
        "modular-shopify",
        "laravel",
        "modular-middleware-shopify"
    ],
    "homepage": "https://github.com/modular-shopify/modular-middleware-shopify",
    "license": "MIT",
    "authors": [
        {
            "name": "Multisafepay",
            "email": "",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0"
    },
    "require-dev": {
        "laravel/pint": "^1.0",
        "nunomaduro/collision": "^6.0",
        "orchestra/testbench": "^7.0",
        "pestphp/pest": "^1.21",
        "pestphp/pest-plugin-laravel": "^1.1",
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "ModularShopify\\ModularShopify\\": "src",
            "ModularShopify\\ModularShopify\\Database\\Factories\\": "database/factories"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ModularShopify\\ModularShopify\\Tests\\": "tests"
        }
    },
    "scripts": {
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "ModularShopify\\ModularShopify\\ModularShopifyServiceProvider"
            ],
            "aliases": {
                "ModularShopify": "ModularShopify\\ModularShopify\\Facades\\ModularShopify"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
